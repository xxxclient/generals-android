<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ground"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_game_app_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_game_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBuildingAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/rus_building_command_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_game_app_bar" />

    <TextView
        android:id="@+id/tvBuildingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBuildingAvatar" />

    <TextView
        android:id="@+id/tvBuildingLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Level: 1"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBuildingName" />

    <TextView
        android:id="@+id/tvBuildingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Description"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBuildingLevel" />

    <ImageView
        android:id="@+id/ivBuildingFirstUnit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/rus_barracks_shooter"
        app:layout_constraintEnd_toStartOf="@id/ivBuildingSecondUnit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBuildingDescription" />

    <ImageView
        android:id="@+id/ivBuildingSecondUnit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/rus_barracks_sniper"
        app:layout_constraintEnd_toStartOf="@id/ivBuildingThirdUnit"
        app:layout_constraintStart_toEndOf="@+id/ivBuildingFirstUnit"
        app:layout_constraintTop_toBottomOf="@+id/tvBuildingDescription" />

    <ImageView
        android:id="@+id/ivBuildingThirdUnit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/rus_barracks_grenade_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBuildingSecondUnit"
        app:layout_constraintTop_toBottomOf="@+id/tvBuildingDescription" />

    <TextView
        android:id="@+id/tvBuildingFirstUnitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Shooter"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ivBuildingFirstUnit"
        app:layout_constraintStart_toStartOf="@+id/ivBuildingFirstUnit"
        app:layout_constraintTop_toBottomOf="@+id/ivBuildingFirstUnit" />

    <TextView
        android:id="@+id/tvBuildingSecondUnitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Shooter"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ivBuildingSecondUnit"
        app:layout_constraintStart_toStartOf="@+id/ivBuildingSecondUnit"
        app:layout_constraintTop_toBottomOf="@+id/ivBuildingSecondUnit" />

    <TextView
        android:id="@+id/tvBuildingThirdUnitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Shooter"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ivBuildingThirdUnit"
        app:layout_constraintStart_toStartOf="@+id/ivBuildingThirdUnit"
        app:layout_constraintTop_toBottomOf="@+id/ivBuildingThirdUnit" />

</androidx.constraintlayout.widget.ConstraintLayout>